<div class="my-posts-main">
    <div class="my-posts-headline">
        <h1>HOME</h1>
        <div>My Recent Activity</div>
    </div>
    {{#each posts as |post|}}
    <div class="my-post-card">
        <a class="post-title" href="/api/posts/{{post.id}}">{{post.title}}</a>
        <p>{{post.description}}</p>

    </div>
    {{/each}}
</div>